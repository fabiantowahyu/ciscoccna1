<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/secondary_light" />
            <gradient android:angle="-90" android:startColor="@color/secondary_light" android:endColor="@color/secondary_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"  />
            <solid android:color="@color/secondary"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/secondary" />
            <gradient android:angle="-90" android:startColor="@color/secondary" android:endColor="@color/secondary" />
        </shape>
    </item>
</selector>
