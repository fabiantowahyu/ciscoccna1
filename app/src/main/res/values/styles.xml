<style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlHighlight">@color/accent</item>
    <item name="colorAccent">@color/base</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>



<style name="AppThemeGoal" parent="Theme.AppCompat.Light">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="colorControlActivated">@color/primary</item>
    <item name="colorControlHighlight">@color/accent</item>
    <item name="colorAccent">@color/primary</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorControlNormal">@color/primary_light</item>
    <!--<item name="android:textColorHint">@color/accent</item>-->
</style>


<style name="MyButton" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorButtonNormal">@color/white</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/secondary_text</item>
    <item name="android:textSize">15dp</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:paddingTop">10dp</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:paddingBottom">10dp</item>
</style>

<style name="Mytitle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:background">@color/primary</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:textSize">15dp</item>
</style>

<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


<style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
    <item name="colorAccent">@color/white</item>
    <item name="android:textColorPrimary">@color/iron</item>

    <item name="android:background">@color/primary</item>
</style>

<style name="FullscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:windowTranslucentStatus">true</item>
</style>

<style name="RatingBar" parent="Theme.AppCompat">
    <item name="colorControlNormal">@color/indigo</item>
    <item name="colorControlActivated">@color/pink</item>
</style>
</resources>
